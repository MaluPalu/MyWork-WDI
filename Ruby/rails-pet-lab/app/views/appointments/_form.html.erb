<%= form_for([@pet, @appointment]) do |g| %>
  <div class="form-group">
    <%= g.text_field :veterinarian, class: "form-control", placeholder: "Veterinarian", autofocus: true %>
  </div>
  <div class="form-group">
    <%= g.text_field :reason, class: "form-control", placeholder: "Reason" %>
  </div>
  <div class="form-group">
    <%= g.submit "Save Appointment", class: "btn btn-block btn-success" %>
  </div>
<% end %>
