<%= form_for([@owner, @pet]) do |g| %>
  <div class="form-group">
    <%= g.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= g.text_field :breed, class: "form-control", placeholder: "Breed" %>
  </div>
  <div class="form-group">
    <%= g.submit "Save Owner", class: "btn btn-block btn-success" %>
  </div>
<% end %>
